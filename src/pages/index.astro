---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Socialisme', url: 'blog/tags/socialisme/' },
  { name: 'Région', url: 'blog/tags/r%C3%A9gion/' },
  { name: 'Féminisme', url: 'blog/tags/f%C3%A9minisme/' },
  { name: 'Ecologie', url: 'blog/tags/ecologie/' },
  { name: 'Service public', url: 'blog/tags/service%20public/' },
  { name: 'Santé', url: 'blog/tags/sant%C3%A9/' },
  { name: 'Jura bernois', url: 'blog/tags/jura%20bernois/' },
];
---

<Layout
  title='Accueil'
  pageTitle='Accueil'
  description='Site internet du PS de La Neuveville'
>
  <main class='bg-#00 p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>Info</h2>
      <div class='col-span-4'>
        <Card color="#8a2600">
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              PS <a
                class='text-white'>La Neuveville</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Section neuvevilloise du Parti Socialiste
            </p>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card color="#d48568">
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Je m'engage!
          </h2>
          <p class='poppins'>
            Pour tous les neuvevillois-e-s, sans privilèges
          </p>
          <br>
           <Button target={'_self'} href='/contact/'>
              Contact &rarr;
            </Button>

            <Button target={'_self'} href='/support/'>
              Soutenez-nous &rarr;
            </Button>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
